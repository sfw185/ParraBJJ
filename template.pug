doctype html
html
  head
    title Grace Parra Timetable
    link(rel='manifest', href='manifest.json')
    link(rel='apple-touch-icon' href='images/icons/icon-512x512.png')
    link(rel='apple-touch-icon' sizes='152x152' href='images/icons/icon-152x152.png')
    link(rel='apple-touch-icon' sizes='180x180' href='images/icons/icon-180x180.png')
    link(rel='apple-touch-icon' sizes='167x167' href='images/icons/icon-167x167.png')
    link(rel='stylesheet' href='styles.css')
    script.
      function setScheduleDay(dayIndex) {
        var tags = document.getElementsByTagName('a');
        for (var i = 0; i < tags.length; i++) {
          var tag = tags[i];
          if (tag.id == dayIndex + '-link') {
            tag.className = 'active';
            document.getElementById(dayIndex).style.display = 'block';
          } else {
            tag.className = '';
            document.getElementById(dayIndex).style.display = 'none';
          }
        }
      }
  body
    a(href='/')
      img(src='images/icons/icon-512x512.png' alt='Gracie Parramatta')
    nav
      - startDay = Object.keys(data)[0]
      each schedule, dayName in data
        a(id=dayName.toLowerCase() + '-link' onclick='setScheduleDay(\'' + dayName.toLowerCase() + '\');' class=`${dayName === startDay ? 'active' : '' }`)
          = dayName[0]
    h1= startDay
    for schedule, dayName in data
      div(id=`#${dayName.toLowerCase()}`)
        for someClass in schedule
          p
            strong= someClass.start + ' - '
              small= someClass.instructor_name.split(' ')[0]
            br
            strong
              em= someClass.title.replace('-B', ' - B')
            br
            small= someClass.description || ''
